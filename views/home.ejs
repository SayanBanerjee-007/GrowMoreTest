<link rel="stylesheet" href="css/home.css">

<%- contentFor('script') %>
<script defer src="js/home.js"></script>

<%- contentFor('body') %>
<% if(!isAuthorized){ %>
<h1>Please <a href="/login">Login </a>to create/ read/ update/ delete your tasks.</h1>
<% }else{ %>
<section class="create-task">
  <div id="create-new-task-button">
    <img src="data:image/png;base64,">
    <p>Create New Task</p>
  </div>
</section>
<dialog id="task-value-popup">
  <p>Enter Task Name:</p>
  <form action="/home" method="post">
    <textarea name="taskValue" id="task-value" rows="3" required minlength="3"></textarea>
    <input type="submit" value="Cancel" id="cancel-task">
    <input type="submit" value="Submit" id="submit-task">
  </form>
</dialog>
<section class="display-task">
  <p>My Tasks</p>

  <% if(userTaskArray.length===0){ %>
  <p>You have not set any task yet.</p>
  <% } %>
  <div class="task-area">
    <% for (let value of userTaskArray) { %>
    <div class="task">
      <p>
        <%=value%>
      </p>
      <button class="update-button">Update</button>
      <button class="delete-button">Delete</button>
    </div>
    <% } %>
  </div>
</section>
<% } %>